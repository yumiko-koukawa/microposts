<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t('views.micropost_form.Compose new micropost...') %>
  </div>
  <%= f.submit t('views.micropost_form.Post'), class: "btn btn-primary" %>
<% end %>