<% if current_user.avatar %>
    <%= link to @user.avatar.url, current_user %>
  <% else %>
    <%= link_to gravatar_for(current_user, size: 50), current_user %>
<% end %>
<h1><%= current_user.name %></h1>
<span><%= link_to t('views.user_info.view my profile'), current_user %></span>
<span><%= current_user.microposts.count %><%= t('views.user_info.micropost') %></span>