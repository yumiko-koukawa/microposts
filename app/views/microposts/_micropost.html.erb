<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <% if micropost.original_user.present? %>
      <% retweet_user = Micropost.find(micropost.original_user).user %>
      <%= link_to "##{retweet_user.name}", user_path(retweet_user) %>
    <% end %>
    <%= micropost.content %>
  </span>
  <span class="timestamp">
    <%= t('views.microposts.Posted') %> <%= time_ago_in_words(micropost.created_at) %> <%= t('views.microposts.ago.') %>
    <% if current_user == micropost.user %>
      <%= link_to t('views.microposts.delete'), micropost, method: :delete,
                                       data: { confirm: t('views.microposts.You sure?') } %>
    <% end %>
  </span>
</li>
<%= render 'microposts/retweet', micropost: micropost %>
