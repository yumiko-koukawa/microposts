<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Microposts", '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to t('views.header.Help'),   '#' %></li>
        <% if logged_in? %>
          <li><%= link_to t('views.header.Users'), '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('views.header.Account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('views.header.Profile'), current_user %></li>
              <li><%= link_to t('views.header.Settings'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('views.header.Log out'), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %> 
          <li><%= link_to t('views.header.Log in'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>