<section class="user_info">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <div>
    <% if @user == current_user %>
      <p>e-mail&nbsp;&nbsp;<%= @user.email %></p>
    <% end %>
      <p>location&nbsp;&nbsp;<%= @user.location.present? ? @user.location : "＜no-data＞" %></p>
  </div>
</section>
<h3>
  <%= link_to t('views.user_info.User'), @user %><br>
  <%= link_to t('views.user_info.Follow') (#{@user.following_users.count})", followings_user_path(@user) %><br>
  <%= link_to t('views.user_info.Follower') (#{@user.follower_users.count})", followers_user_path(@user) %>
</h3>